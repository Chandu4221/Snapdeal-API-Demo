<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
	<link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
	<div class="container">
		
		<div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>                        
            </button>
			<a href="/" class="navbar-brand">Snapdeal API Demo</a>
        </div>

        <div class="collaspe navbar-collapse" id="myNavbar">
			<ul class="nav navbar-nav navbar-right">
				<li id="CategoryFeed"><a href="/categories">Category Feed</a></li>
        	</ul>
		</div>

	</div>
</nav>


<div class="container" style="margin-top:80px">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="well text-center"><h3>Snapdeal <%= title %> Products </h3></div>
    </div> 
</div>

<div class="container">

    <% for(var i=0;i<products.length;i++){ %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="well text-center  product-hover">
              <a href="<%= products[i].pLink %>" target="_blank" class="myanchor">
                <div class="thumbnail mythumbnail">
                    <div class="text-center myimgContainer">
                    <img src="<%= products[i].pImageLink %>" class="img-responsive center-block">
                    </div>
                    <hr>
                    <div class="bg-info caption info-section">
                        <div class="title-section">
                            <%= products[i].pTitle %>
                        </div>
                        <div class="bg-primary">
                            <p class="text-center">
                                <strong>MRP : Rs <%= products[i].pMRP %>/-</strong>
                            </p>
                        </div>

                        <% if(products[i].pInStock){ %>
                            <p class="alert alert-success">In Stock</p>
                        <% } else { %>
                            <p class="alert alert-warning"> Out of Stock</p>
                        <% } %>


                    </div>
                </div>
                </a>
            </div>
        </div>
    <% } %>
		
</div>

<script type="text/javascript" src="/javascripts/jquery-3.1.1.js"></script>
<script type="text/javascript" src="/javascripts/bootstrap.js"></script>
<script type="text/javascript" src="/javascripts/myscript.js"></script>
</body>
</html>